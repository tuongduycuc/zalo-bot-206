# --- Server ---
PORT=3000
TZ=Asia/Bangkok

# Domain gốc để tạo link tải file (ví dụ: https://zalo-bot-206.onrender.com)
PUBLIC_BASE_URL=https://zalo-bot-206.onrender.com

# --- Zalo OA token ---
ZALO_OA_ACCESS_TOKEN=<<access_token_hien_tai>>
REFRESH_TOKEN=<<refresh_token_neu_co>>

# (tùy chọn) cố định group, nếu để trống bot sẽ tự lưu khi nhận webhook
GROUP_ID=

# Quyền lệnh (nếu chỉ admin được dùng lệnh)
ONLY_ADMINS=false
ADMIN_UIDS=

# Tự ghi việc từ tin nhắn thường trong nhóm
AUTO_TODO=true
# Có gửi tin xác nhận khi ghi việc hay không
AUTO_TODO_CONFIRM=false

# Im lặng khi đánh dấu hoàn thành
DONE_SILENT=true

# Báo cáo tự động hằng ngày (theo TZ)
DAILY_REPORT_HOUR=17
DAILY_REPORT_MINUTE=0
