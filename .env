# --- Server ---
PORT=3000
TZ=Asia/Bangkok

# --- Zalo OA token (bắt buộc) ---
ZALO_OA_ACCESS_TOKEN=YOUR_LONG_OA_ACCESS_TOKEN_HERE

# --- Group (để trống: bot sẽ tự lưu khi nhận sự kiện nhóm) ---
GROUP_ID=

# --- Webhook verify (tắt khi test nhanh) ---
VERIFY_SIGNATURE=false      # true để bật kiểm tra chữ ký
SIGN_MODE=1                 # 1: sha256(data + ZALO_API_KEY), 2: sha256(appId + data + timeStamp + OA_SECRET)

# Nếu SIGN_MODE=1  -> điền khóa bí mật dùng để hash
ZALO_API_KEY=

# Nếu SIGN_MODE=2  -> điền AppID & Secret của OA
OA_APP_ID=
OA_SECRET=
